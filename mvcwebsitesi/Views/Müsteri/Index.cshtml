@model IEnumerable<mvcwebsitesi.Models.Müsteri>

@{
    ViewBag.Title = "Index";
}
<br /> <br /> <br />
              <div class="container pb-5">

                  <table class="table">
                      <tr>
                          <th>
                              @Html.DisplayNameFor(model => model.AdSoyad)
                          </th>
                          <th>
                              @Html.DisplayNameFor(model => model.Email)
                          </th>
                          <th></th>
                      </tr>

                      @foreach (var item in Model)
                      {
                          <tr>
                              <td>
                                  @Html.DisplayFor(modelItem => item.AdSoyad)
                              </td>
                              <td>
                                  @Html.DisplayFor(modelItem => item.Email)
                              </td>
                              <td>
                                  @Html.ActionLink(" Detaylı Bilgilerini Görmek İster Misin?", "Details", new { id = item.MüsteriId }, new { @class = " btn btn-success btn-sm fa fa-search" })
                                  @Html.ActionLink(" Bilgilerini Güncellemek İster Misin?", "Edit", new { id = item.MüsteriId }, new { @class = " btn btn-success btn-sm fa fa-pencil-square-o" })
                                  @Html.ActionLink(" Üyeliği Sonlandırmak İster Misin?", "Delete", new { id = item.MüsteriId }, new { @class = " btn btn-success btn-sm fa fa-trash" })
                              </td>
                          </tr>
                      }

                  </table>
                  <br /> <br /> <br /> <br /> 
              </div>