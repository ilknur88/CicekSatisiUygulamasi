@model IEnumerable<mvcwebsitesi.Models.Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<br /> <br /> <br />
<div class="container pb-5">

    <p>
        @Html.ActionLink(" Ekle", "Create", "Kategori", new { @class = " btn btn-success btn-sm fa fa-plus-square" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KategoriAlani)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KategoriAlani)
                </td>
                <td>
                    @Html.ActionLink(" Detay", "Details", new { id = item.Id }, new { @class = " btn btn-success btn-sm fa fa-search" })
                    @Html.ActionLink(" Güncelle", "Edit", new { id = item.Id }, new { @class = " btn btn-success btn-sm fa fa-pencil-square-o" })
                    @Html.ActionLink(" Sil", "Delete", new { id = item.Id }, new { @class = " btn btn-success btn-sm fa fa-trash" })
                </td>
            </tr>
        }

    </table>
    <div>
        @Html.ActionLink(" Geri Dön", "AdminGiris", "Admin", null, new { @class = " btn btn-danger btn-sm fa fa-reply-all" })
    </div>
</div>