@model IEnumerable<mvcwebsitesi.Models.CiceklerUrun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<br /> <br /> <br />
<div class="container pb-5">
    <p>
        @Html.ActionLink(" Ekle", "Create", "CiceklerUrun", new { @class = " btn btn-success btn-sm fa fa-plus-square" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Resim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategori.KategoriAlani)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrunAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OnayliMi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ÖncelikliMi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnaSayfaMi)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/lotus/images/flower/@item.Resim" width="75" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kategori.KategoriAlani)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UrunAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fiyat)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.OnayliMi)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.ÖncelikliMi)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.AnaSayfaMi)
                </th>
                <td>
                    @Html.ActionLink(" Detay", "Details", new { id = item.Id }, new { @class = " btn btn-success btn-sm fa fa-search" })
                    @Html.ActionLink(" Güncelle", "Edit", new { id = item.Id }, new { @class = " btn btn-success btn-sm fa fa-pencil-square-o" })
                    @Html.ActionLink(" Sil", "Delete", new { id = item.Id }, new { @class = " btn btn-success btn-sm fa fa-trash" })
                </td>
            </tr>
        }
        
    </table>
    <div>
        @Html.ActionLink(" Geri Dön", "AdminGiris", "Admin", null, new { @class = " btn btn-danger btn-sm fa fa-reply-all" })
    </div>
</div>