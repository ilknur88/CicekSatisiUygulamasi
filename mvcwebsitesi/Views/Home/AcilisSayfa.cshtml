@{
    Layout = "~/Views/Shared/_LayoutAnaSayfa.cshtml";

}

    <section id="shop" class="container">

        <div class="row">
            <div class="col-md-12">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 wow fadeInUp">
                            <div class="text-center product-item">
                                <div class="product-item-top">
                                    <img alt="" class="img-responsive" src="~/lotus/images/flower/@item.Resim" style="width:200px;height: 350px">
                                    <p style="color:red"> Ürünlerimizi Görebilmek ve Satın Alabilmek İçin Lütfen Giriş Yapınız...</p>
                                    <p style="color:red"> Üye Değilseniz Lütfen Üye Olunuz...</p>
                                    <div class="mask"></div>
                                    <ul class="list-unstyled list-inline">
                                        <li><a href="#"><i class="fa fa-link fa-fw"></i></a></li>

                                        <li><a href="#"><i class="fa fa-cart-plus fa-fw"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product-item-inner">
                                    <h3 class="product-title"><a href="#">@item.UrunAd</a></h3>
                                    <p class="product-price">@item.Fiyat TL</p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="col-md-12 wow fadeIn">
                        <div id="pagination" class="row text-center">
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    <li class="disabled">
                                        <a href="#" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                    <li class="active"><a href="#">1</a></li>
                                    <li class="disabled"><a href="#">...</a></li>
                                    <li><a href="#">3</a></li>
                                    <li>
                                        <a href="#" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
